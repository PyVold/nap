# ============================================================================
# Network Audit Platform - Production Environment Variables
# ============================================================================
# Copy this file to .env.prod and fill in your values
# NEVER commit .env.prod to version control!
# ============================================================================

# ============================================================================
# REQUIRED SECURITY SETTINGS
# ============================================================================

# JWT Secret Key for authentication tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=GENERATE_SECURE_KEY_HERE

# Encryption Key for device credentials
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=GENERATE_SECURE_KEY_HERE

# License System Keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
LICENSE_ENCRYPTION_KEY=GENERATE_SECURE_KEY_HERE
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
LICENSE_SECRET_SALT=GENERATE_SECURE_SALT_HERE

# ============================================================================
# Database Settings
# ============================================================================

# PostgreSQL credentials
POSTGRES_DB=nap_db
POSTGRES_USER=nap_user
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# Database connection URL (used by services)
DATABASE_URL=postgresql://nap_user:YOUR_PASSWORD_HERE@database:5432/nap_db

# ============================================================================
# Service Settings
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=info

# Service URLs (for inter-service communication)
DEVICE_SERVICE_URL=http://device-service:3001
RULE_SERVICE_URL=http://rule-service:3002
BACKUP_SERVICE_URL=http://backup-service:3003
INVENTORY_SERVICE_URL=http://inventory-service:3004
ADMIN_SERVICE_URL=http://admin-service:3005
ANALYTICS_SERVICE_URL=http://analytics-service:3006

# ============================================================================
# Service Ports
# ============================================================================

API_GATEWAY_PORT=3000
DEVICE_SERVICE_PORT=3001
RULE_SERVICE_PORT=3002
BACKUP_SERVICE_PORT=3003
INVENTORY_SERVICE_PORT=3004
ADMIN_SERVICE_PORT=3005
ANALYTICS_SERVICE_PORT=3006
FRONTEND_PORT=8080

# ============================================================================
# Rate Limiting
# ============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# Redis Configuration (for caching/sessions)
# ============================================================================

REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379

# ============================================================================
# Monitoring
# ============================================================================

GRAFANA_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
APP_VERSION=1.0.0

# ============================================================================
# Frontend Settings
# ============================================================================

# API URL that the frontend will use (update with your domain)
REACT_APP_API_URL=http://localhost:3000
API_URL=http://localhost:3000

# ============================================================================
# Optional Settings
# ============================================================================

# Enable debug mode (do not use in production)
DEBUG_MODE=false

# Audit logging to external SIEM (optional)
# AUDIT_SIEM_WEBHOOK=https://your-siem.example.com/webhook
# AUDIT_LOG_FILE=true
